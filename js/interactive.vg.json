{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "title": "Human Capital Index per Gender 2020",
  "data": {
    "url": "https://raw.githubusercontent.com/siennarodriguez/vis1/main/data/hci_all.csv"
  },
  "transform": [
      {
          "calculate": "datum."
      }
  ],
  "mark": "circle",
  "encoding": {
    "x": {
      "field": "Adult Survival Rate",
      "type": "quantitative",
      "title": "Adult Survival Rate",
      "axis": { "tickCount": 7 },
      "scale": { "domain": [0.5, 1] }
    },
    "y": {
      "field": "HUMAN CAPITAL INDEX 2020",
      "type": "quantitative",
      "title": "Human Capital Index",
      "axis": { "tickCount": 6 },
      "scale": { "domain": [0.2, 1] }
    },
    "color": {
      "field": "Continent",
      "type": "nominal",
      "scale": {
        "domain": [
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "range": [
          "#e41a1c",
          "#984ea3",
          "#ff7f00",
          "#a6cee3",
          "#377eb8",
          "#a65628"
        ]
      }
    },
    "opacity": {
      "value": 0.6
    },
    "size": {
      "field": "Population",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
        "range": [10, 50, 150, 200, 300, 400]
      },
      "legend": { "format": ".1s" }
    },
    "tooltip": [
      { "field": "Country Name", "type": "nominal" },
      {
        "field": "HUMAN CAPITAL INDEX 2020",
        "type": "quantitative",
        "format": ","
      },
      { "field": "Adult Survival Rate", "type": "quantitative", "format": "," },
      { "field": "Population", "type": "quantitative", "format": "," },
      { "field": "Income Group", "type": "nominal" }
      {
          "field": "Adult Survival Rate per 10, 000 population",
          "type": "quantitative",
          "format": ".2f"
      }
    ]
  }
}
